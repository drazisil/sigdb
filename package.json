{
  "name": "sigdb",
  "version": "3.0.1",
  "description": "A file signature database manager",
  "main": "dest/index.js",
  "scripts": {
    "lint": "eslint --fix",
    "prepare": "husky install",
    "pretest": "npm run build",
    "test": "tap --ts",
    "build:only": "tsc --build",
    "build": "npm run build:clean && npm run build:only",
    "build:clean": "tsc --build --clean",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/drazisil/sigdb.git"
  },
  "keywords": [
    "file",
    "signature",
    "magic",
    "number",
    "files"
  ],
  "author": "Drazi Crendraven",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/drazisil/sigdb/issues"
  },
  "homepage": "https://github.com/drazisil/sigdb#readme",
  "devDependencies": {
    "@types/node": "20.14.9",
    "@types/tap": "15.0.11",
    "eslint": "9.5.0",
    "eslint-config-prettier": "9.1.0",
    "husky": "9.0.11",
    "prettier": "3.3.2",
    "tap": "16.3.10",
    "ts-node": "10.9.2",
    "typescript": "5.5.2"
  },
  "lint-staged": {
    "**/*.js": [
      "npx prettier --write",
      "npx eslint --fix"
    ],
    "**/*.{json,md,yml,yaml,html}": [
      "npx prettier --write"
    ]
  }
}
